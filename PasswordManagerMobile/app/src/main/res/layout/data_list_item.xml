<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="10.5dp"
    android:layout_marginTop="10.5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="12.6dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/websiteLogo_iv"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="18dp"
                android:layout_marginTop="10.8dp"
                android:layout_marginBottom="9.9dp"
                android:src="@drawable/facebook" />

            <TextView
                android:id="@+id/websiteName_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="8.1dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10.2dp"
                android:fontFamily="@font/open_sans_semibold"
                android:text="Facebook"
                android:textColor="#0E85FF"
                android:textSize="18sp"
                android:layout_alignEnd="@id/websiteLogo_iv"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp">
            <ImageView
                android:id="@+id/copy_iv"
                android:layout_width="17.82dp"
                android:layout_height="17.82dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="142.2dp"
                android:layout_marginTop="37.8dp"
                android:layout_toEndOf="@+id/websiteLogo_iv"
                android:src="@drawable/ic_baseline_content_copy_24" />

            <TextView
                android:id="@+id/copy_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/websiteName_tv"
                android:layout_marginStart="5.67dp"
                android:layout_marginTop="37.8dp"
                android:layout_marginBottom="10.08dp"
                android:layout_toEndOf="@+id/copy_iv"
                android:width="81dp"
                android:height="15dp"
                android:text="Copy Password"
                android:textColor="#0E85FF"
                android:textSize="11.34sp" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/website_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6.3dp"
            android:layout_marginBottom="12.5dp"
            android:fontFamily="@font/open_sans_regular"
            android:text="www.facebook.com"
            android:textColor="#3C4857"
            android:layout_gravity="center"
            android:textSize="14.4sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>