<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/mobileNumber_et"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="43dp"
            android:background="@drawable/edittext_background"
            android:fontFamily="@font/open_sans_semibold"
            android:hint="Enter Mobile Number"
            android:inputType="number"
            android:maxLength="10"
            android:paddingStart="22dp"
            android:paddingTop="17dp"
            android:paddingEnd="10dp"
            android:paddingBottom="15dp"
            android:textAlignment="viewStart"
            android:textColor="#787E8C"
            android:textColorHint="#787E8C"
            android:textSize="16sp"
            android:backgroundTint="@color/white"/>

        <EditText
            android:id="@+id/mPin_et"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/edittext_background"
            android:fontFamily="@font/open_sans_semibold"
            android:hint="Enter 4 digit MPin"
            android:inputType="numberPassword"
            android:maxLength="4"
            android:paddingStart="21dp"
            android:paddingTop="17dp"
            android:paddingEnd="10dp"
            android:paddingBottom="15dp"
            android:textAlignment="viewStart"
            android:textColor="#787E8C"
            android:textColorHint="#787E8C"
            android:textSize="16sp"
            android:backgroundTint="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/edittext_background"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/reEnter_mPin_et"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_weight="1.5"
                android:fontFamily="@font/open_sans_semibold"
                android:hint="Re-Enter 4 digit MPin"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:paddingStart="21dp"
                android:paddingTop="17dp"
                android:paddingEnd="10dp"
                android:paddingBottom="15dp"
                android:textAlignment="viewStart"
                android:textColor="#787E8C"
                android:textColorHint="#787E8C"
                android:textSize="16sp"
                android:backgroundTint="@color/white"/>

            <ImageButton
                android:id="@+id/password_toggle_ImageButton"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_weight="0.25"
                android:background="@drawable/edittext_background"
                android:src="@drawable/ic_baseline_visibility_off_24"
                android:contentDescription="@string/todo" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/sign_in_bn"
            android:layout_width="130dp"
            android:layout_height="44dp"
            android:layout_marginTop="47dp"
            android:backgroundTint="@color/white"
            android:saveEnabled="false"
            app:cardCornerRadius="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/open_sans_semibold"
                android:text="SIGN IN"
                android:textColor="#0E85FF"
                android:textSize="18sp" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</FrameLayout>