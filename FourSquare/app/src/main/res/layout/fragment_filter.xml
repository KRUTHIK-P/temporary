<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E5E5E5"
    tools:context=".fragments.Filter">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#370F24"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:src="@drawable/back_icon" />

        <LinearLayout
            android:id="@+id/search_lyt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/search_lytt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"

                android:background="@drawable/search_bg"
                android:paddingStart="-10dp">


                <SearchView
                    android:id="@+id/search_sv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white"
                    android:closeIcon="@drawable/close_icon_grey"
                    android:iconifiedByDefault="false"
                    android:queryHint="Search"
                    android:searchIcon="@drawable/serch" />
            </LinearLayout>
        </LinearLayout>


        <ImageView
            android:id="@+id/search_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:src="@drawable/filter_icon" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#370F24"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:src="@drawable/back_icon"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/search_bg"
                android:paddingStart="-10dp">


                <SearchView
                    android:id="@+id/nearMe_sv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:closeIcon="@drawable/close_icon_grey"
                    android:iconifiedByDefault="false"
                    android:queryHint="Near Me"
                    android:searchIcon="@drawable/near_me" />
            </LinearLayout>
        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:src="@drawable/filter_icon"
            android:visibility="invisible" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/near_by_places_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/avenir_medium"
                android:text="  Sort by"
                android:textColor="#858585"
                android:textSize="22sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#351347"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:background="@color/white"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Popular"
                        android:textColor="#351347"
                        android:layout_weight="1"
                        android:textAlignment="center"/>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:backgroundTint="#351347"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distance"
                        android:textColor="#351347"
                        android:layout_weight="1"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rating"
                        android:textColor="#351347"
                        android:layout_weight="1"
                        android:textAlignment="center"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/avenir_medium"
                android:text="  Suggestions"
                android:textColor="#858585"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/toppick_tv"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/white"
                android:fontFamily="@font/avenir_book"
                android:gravity="center_vertical"
                android:text="    Top pick"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E5E5" />

            <TextView
                android:id="@+id/popular_tv"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/white"
                android:fontFamily="@font/avenir_book"
                android:gravity="center_vertical"
                android:text="    Popular"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E5E5" />

            <TextView
                android:id="@+id/lunch_tv"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/white"
                android:fontFamily="@font/avenir_book"
                android:gravity="center_vertical"
                android:text="    Lunch"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E5E5" />

            <TextView
                android:id="@+id/coffee_tv"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/white"
                android:fontFamily="@font/avenir_book"
                android:gravity="center_vertical"
                android:text="    Coffee"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E5E5" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>